<h1>Index of projects</h1>

<ul id="projects-list">
  <% @projects.each do |project| %>
    <li>
      <%= link_to project.name, project_path(project), id: "project-#{project.name}" %>
      <%= link_to "Edit", edit_project_path(project), class: "btn btn-info" %>
      <%= link_to "Delete", project_path(project), method: :delete, id: "delete-project-#{project.id}" %>
    </li>
  <% end %>
</ul>