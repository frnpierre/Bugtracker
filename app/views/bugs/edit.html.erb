<div class="row">
  <div class="col-md-8 offset-md-2">
    <h1 class="top-page-title" align="center">Edit bug</h1>
    <%= form_with model: [@project, @bug], local: true, html: { class: "needs-validation", novalidate: true } do |f| %>
      <legend>From project: <%= @project.name %></legend>
      
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control", required: true %>
        <%= render "shared/new_form_validations" %>
      </div>
      
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control", required: true %>
        <%= render "shared/new_form_validations" %>
      </div>
      
      <div class="form-group">
        <%= f.submit "Save changes", class: "btn btn-success"%>
      </div>
    <% end %>
  </div>
</div>

<%= javascript_include_tag "bootstrap_form_validations" %>